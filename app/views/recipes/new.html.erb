<%= form_with model: @recipe do |form| %>
      <%= form.text_field :title, placeholder: "Titre de votre recette" %>
      <%= form.text_area :description, placeholder: "Ecrivez ici votre recette" %>
      <%= form.text_area :ingredient, placeholder: "Les ingrédients que vous avez utilisé" %>
      <%= form.number_field :price, placeholder: "Prix moyen de cette recette" %>
      <%= form.number_field :difficulty, placeholder: "Difficulté entre 1 et 3" %>
      <%= form.number_field :time, placeholder: "Temps moyen pour réaliser cette recette" %>
      <%= form.file_field :image, placeholder: "Image", lang: "fr" %>
      <%= form.label :image, "Choisir une image" %>
  <%= form.submit "Enregistrer votre recette" %>
<% end %>
